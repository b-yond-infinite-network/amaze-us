<?xml version="1.0" encoding="UTF-8"?>
<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://maven.apache.org/POM/4.0.0"
         xsi:schemaLocation=" http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>com.veronezi</groupId>
        <artifactId>karaoke-parent</artifactId>
        <version>0.0.1-SNAPSHOT</version>
    </parent>
    <artifactId>karaoke-webapp</artifactId>
    <packaging>war</packaging>
    <dependencies>
        <dependency>
            <groupId>${project.parent.groupId}</groupId>
            <artifactId>karaoke-servers</artifactId>
            <version>${project.version}</version>
            <type>pom</type>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>${project.parent.groupId}</groupId>
            <artifactId>karaoke-api</artifactId>
            <version>${project.version}</version>
        </dependency>
    </dependencies>
    <build>
        <plugins>
            <plugin>
                <artifactId>maven-resources-plugin</artifactId>
                <version>3.0.2</version>
                <executions>
                    <execution>
                        <id>copy-resources</id>
                        <phase>validate</phase>
                        <goals>
                            <goal>copy-resources</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>${project.build.directory}/docker-build</outputDirectory>
                            <resources>
                                <resource>
                                    <directory>${project.basedir}/src/main/docker</directory>
                                    <filtering>true</filtering>
                                    <excludes>
                                        <exclude>static/base/node_modules/**/*</exclude>
                                    </excludes>
                                </resource>
                            </resources>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <artifactId>maven-antrun-plugin</artifactId>
                <version>1.8</version>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <configuration>
                            <target>
                                <copy file="${project.build.directory}/${project.build.finalName}.war"
                                      todir="${project.build.directory}/docker-build/full"/>
                            </target>
                        </configuration>
                        <goals>
                            <goal>run</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>io.fabric8</groupId>
                <artifactId>docker-maven-plugin</artifactId>
                <version>${docker.plugin.version}</version>
                <executions>
                    <execution>
                        <id>build</id>
                        <goals>
                            <goal>build</goal>
                        </goals>
                        <phase>package</phase>
                        <configuration>
                            <verbose>true</verbose>
                            <images>
                                <image>
                                    <name>${images.owner}/karaoke-static-install:${project.version}</name>
                                    <build>
                                        <filter>false</filter>
                                        <dockerFileDir>${project.build.directory}/docker-build/static</dockerFileDir>
                                        <dockerFile>install.dockerfile</dockerFile>
                                    </build>
                                </image>
                                <image>
                                    <name>${images.owner}/karaoke-static:${project.version}</name>
                                    <build>
                                        <filter>false</filter>
                                        <dockerFileDir>${project.build.directory}/docker-build/static</dockerFileDir>
                                        <dockerFile>build.dockerfile</dockerFile>
                                    </build>
                                </image>
                                <image>
                                    <name>${images.owner}/karaoke-war:${project.version}</name>
                                    <build>
                                        <filter>false</filter>
                                        <dockerFileDir>${project.build.directory}/docker-build/full</dockerFileDir>
                                        <dockerFile>war.dockerfile</dockerFile>
                                    </build>
                                </image>
                                <image>
                                    <name>${images.owner}/karaoke:${project.version}</name>
                                    <build>
                                        <filter>false</filter>
                                        <dockerFileDir>${project.build.directory}/docker-build/full</dockerFileDir>
                                        <dockerFile>app.dockerfile</dockerFile>
                                    </build>
                                </image>
                            </images>
                        </configuration>
                    </execution>
                    <execution>
                        <id>dev</id>
                        <goals>
                            <goal>run</goal>
                        </goals>
                        <phase/>
                        <configuration>
                            <verbose>true</verbose>
                            <images>
                                <image>
                                    <name>${images.owner}/karaoke-static:${project.version}</name>
                                    <run>
                                        <volumes>
                                            <bind>
                                                <volume>${project.basedir}/src/main/docker/static/base/src:/opt/base/src</volume>
                                                <volume>${project.build.directory}/output:/opt/output</volume>
                                            </bind>
                                        </volumes>
                                    </run>
                                </image>
                                <image>
                                    <name>${images.owner}/karaoke:${project.version}</name>
                                    <run>
                                        <ports>
                                            <port>${server.port}:8080</port>
                                            <port>${server.debug.port}:8000</port>
                                        </ports>
                                        <env>
                                            <musixmatch_api_key>${env.musixmatch_api_key}</musixmatch_api_key>
                                        </env>
                                        <volumes>
                                            <bind>
                                                <volume>${project.build.directory}/output:/opt/tomee/webapps/ROOT/app</volume>
                                            </bind>
                                        </volumes>
                                        <cmd>
                                            <arg>jpda</arg>
                                            <arg>run</arg>
                                        </cmd>
                                    </run>
                                </image>
                            </images>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>

