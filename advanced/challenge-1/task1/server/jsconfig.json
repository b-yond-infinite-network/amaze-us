        "module": "commonjs",
        "allowJs": true,
        "checkJs": true,
        "target": "es6",
        "moduleResolution": "node",
        "sourceMap": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "declaration": false,
        "outDir": "dist",
    },
    "exclude": [
        "node_modules",
        "**/node_modules/*"
    ]
