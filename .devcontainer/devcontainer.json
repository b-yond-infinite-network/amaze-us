{
  "name": "Python 3",
  "build": {
    "dockerfile": "./Dockerfile"
  },
  "containerEnv": {
    "DB_PATH": "sqlite:///db.sqlite",
    "DB_FILE_NAME": "db.sqlite"
  },
  "features": {
    "ghcr.io/devcontainers/features/node:1": {
      "version": "lts"
    },
    "ghcr.io/devcontainers/features/git:1": {},
    "ghcr.io/devcontainers/features/github-cli:1": {}
  },
  "extensions": [
    "ms-python.python",
    "GitHub.copilot"
  ],
  "forwardPorts": [
    //fastapi
    8000, 
    //sqlite web explorer
    8080
  ],
  "postStartCommand": "pip install -r requirements.txt && pip install -r ./dev_tools/requirements.txt && python -m dev_tools.initialize_database",
  "remoteUser": "vscode"
}
